<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/voterimage"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:text="WELCOME ON E-ROLL APPLICATION"

        android:textColor="#BBF7FF"
        android:textSize="30sp"
        >
    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WHICH ACTION DO YOU WANT?"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:textColor="#FDE725"
        android:textSize="28sp"></TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100sp"
        android:textSize="15sp"
        android:text="SEARCH"
        ></Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100sp"
        android:textSize="15sp"
        android:text="RAGISTRATION"
        ></Button>






</LinearLayout>