<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/circle1"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RAGISTRATION"
        android:textSize="30sp"
        android:textColor="#F62004"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:id="@+id/tv1"
        >

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv2"
        android:text="Voter_Email"
        android:textColor="#0C0B00"
        android:textSize="30sp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"></TextView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ed1"
        android:inputType="textEmailAddress"
        android:hint="Type here"
        android:textColorHint="#0B0B0A"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv3"
        android:text="Voter_Name"
        android:textColor="#171716"
        android:textSize="30sp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"></TextView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ed2"
        android:inputType="text"
        android:hint="Type here"
        android:textColorHint="#151515"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv4"
        android:text="Voter_Age"
        android:textColor="#121212"
        android:textSize="30sp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"></TextView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ed3"
        android:inputType="number"
        android:hint="Type here"
        android:textColorHint="#131313"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"></EditText>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv6"
        android:text="Voter_Address"
        android:textColor="#151515"
        android:textSize="30sp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"></TextView>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ed5"
        android:inputType="textPostalAddress"
        android:hint="Type here"
        android:textColorHint="#090909"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"></EditText>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/b1"
        android:textSize="15sp"
        android:onClick="ragister"
        android:layout_gravity="center"></Button>






</LinearLayout>